{% extends 'admin/admin_base.html.twig' %}

{% block main %}
    <div class="flex">
        {% for tag in tags %}
            <article class="tag">
                <h1 style="background-color: {{ tag.color }}">{{ tag.title }}</h1>
                <a href="{{ path('tagList', {'id': tag.id }) }}" class="text-deco">Voir plus</a><br><br>
                <a href="{{ path('admin_tag_update', {'id': tag.id }) }}" class="text-deco">Mettre à jour (hardcodé)</a><br>
                <a href="{{ path('admin_tag_Delete', {'id': tag.id }) }}" class="text-deco">Supprimer</a>
            </article>
        {% endfor %}
    </div>
{% endblock %}