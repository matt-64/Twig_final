{% extends 'base.html.twig' %}
{% block main %}
    <main>
        <!-- j'utilise un filtre de twig afin de faire apparaitre le nombre d'articles dans mon tableau   -->
        <h1>Il y'a {{ articles | length }} articles dans la base de donn√©es</h1>
        {% for article in articles %}
            <!-- je test si 'published' de chaque article vaut ->true, j'affiche... -->
            {% if article.ispublished %}
                <article>
                    <a href="{{ path('articleShow',{id:article.id}) }}">
                        <h1>{{ article.title }}</h1>
                    </a>
                    <p>{{ article.content }}</p>
                    <h1 class="text-center"><p>La valeur de l'id est: {{ article.id }}</p></h1>
                </article>
            {% endif %}
        {% endfor %}
    </main>
{% endblock %}